package Nptv23Daniel; // Определяет пакет, в котором находится данный класс.

import java.util.Random; // Импортируем класс Random для генерации случайных чисел.
import java.util.Arrays; // Импортируем класс Arrays для сортировки массива.

public class Nptv23Daniel { // Объявляем класс Nptv23Daniel
    public static void main(String[] args) { // Главный метод, точка входа в программу
        int[] array = new int[100]; // Создаём массив из 100 элементов.
        Random random = new Random(); // Создаём объект Random для генерации случайных чисел.

        System.out.println("Неотсортированный массив:"); // Выводим заголовок.

        // Заполняем массив случайными нечётными числами от 1 до 99 и выводим его.
        for (int i = 0; i < array.length; i++) { // Цикл для заполнения массива
            array[i] = random.nextInt(50) * 2 + 1; // Генерируем случайное нечётное число от 1 до 99.
            System.out.printf("%3d", array[i]); // Выводим число с отступом в 3 символа.

            if ((i + 1) % 10 == 0) { // Если вывели 10 чисел в строке, переходим на новую строку.
                System.out.println();
            }
        }

        System.out.println("Отсортированный массив:"); // Выводим заголовок отсортированного массива.

        int sum = 0; // Объявляем переменную для суммы элементов массива.
        Arrays.sort(array); // Сортируем массив по возрастанию.

        // Выводим отсортированный массив и вычисляем сумму элементов.
        for (int i = 0; i < array.length; i++) { // Перебираем элементы массива.
            sum += array[i]; // Добавляем элемент в сумму.
            System.out.printf("%3d", array[i]); // Выводим число с отступом в 3 символа.

            if ((i + 1) % 10 == 0) { // Если вывели 10 чисел в строке, переходим на новую строку.
                System.out.println();
            }
        }

        int averageNumber = sum / array.length; // Вычисляем среднее арифметическое массива.
        System.out.println("Среднее арифметическое число массива: " + averageNumber); // Выводим результат.
    }
}
